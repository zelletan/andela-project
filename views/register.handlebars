<h2 class="page-header">Register</h2>
{{#if errors}}
      {{#each errors}}
        <div class="alert alert-danger">{{msg}}</div>
      {{/each}}
{{/if}}
<form method="post" action="/users/register">
   <div class="form-group">
    <label>Fullname</label>
    <input type="text" class="form-control" placeholder="Enter Fullname" name="fullname">
  </div>
  <div class="form-group">
    <label>Username</label>
    <input type="text" class="form-control" placeholder="Choose a school Username" name="username">
  </div>
   <div class="form-group">
    <label>Email</label>
    <input type="email" class="form-control" placeholder="Enter a valid Email address" name="email">
  </div>
    <div class="form-group">
        <label>Address</label>
        <input type="text" class="form-control" placeholder="Enter your contact address" name="address">
    </div>
    <div class="form-group">
        <label>Phone number</label>
        <input type="text" class="form-control" placeholder="Enter your phone number" name="studentphoneNumber">
    </div>
  <div class="form-group">
    <label>Password</label>
    <input type="password" class="form-control" placeholder="Enter Password" name="password">
  </div>
  <div class="form-group">
    <label>Confirm Password</label>
    <input type="password" class="form-control" placeholder="Confirm Password" name="password2">
  </div>
    <div class="form-group">
        <label>Parent/Guardian Name</label>
        <input type="text" class="form-control" placeholder="Parent/guardian fullname" name="parentname">
    </div>

    <div class="form-group">
        <label>Parent/Guardian Contact Address</label>
        <input type="text" class="form-control" placeholder="Parent/guardian address" name="parentcontact">
    </div>
    <div class="form-group">
        <label>Parent phone number</label>
        <input type="text" class="form-control" placeholder="parent/guardian phone number" name="parentphonenumber">
    </div>
  <button type="submit" class="btn btn-default">Submit</button>
</form>